---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { Icon } from 'astro-icon/components';
---

<header class="m-0 px-[1em] bg-white shadow-[0_2px_8px_rgba(var(--black),0.05)]">
	<nav class="flex items-center justify-between">
		<div class="m-0 text-xl">
			<a href="/" class="no-underline flex items-center gap-2 text-[rgb(var(--black))]">
				<img src="/favicon.svg" alt="Irad Aharoni" width="32" height="32" />{SITE_TITLE}
			</a>
		</div>
		<div class="internal-links flex gap-x-4">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links hidden md:flex gap-x-2">
			<a href="mailto:irad.aharoni@gmail.com" class="flex p-2 text-[rgb(var(--black))]">
				<span class="sr-only">Send Me an Email</span>
				<Icon name="mdi:email" width="32" height="32" />
			</a>
			<a href="https://linkedin.com/in/iradaharoni" target="_blank" class="flex p-2 text-[rgb(var(--black))]">
				<span class="sr-only">Follow Me on LinkedIn</span>
				<Icon name="mdi:linkedin" width="32" height="32" />
			</a>
			<a href="https://github.com/irad100" target="_blank" class="flex p-2 text-[rgb(var(--black))]">
				<span class="sr-only">Go to My GitHub repo</span>
				<Icon name="mdi:github" width="32" height="32" />
			</a>
		</div>
	</nav>
</header>
