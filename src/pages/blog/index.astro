---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="max-w-4xl mx-auto">
			<section>
				<ul class="grid md:grid-cols-2 gap-2 md:gap-8 list-none m-0 p-0">
					{
						posts.map((post) => (
							<li class="w-full md:first:col-span-2 first:col-span-1 first:mb-0 md:first:mb-4">
								<a href={`/blog/${post.id}/`} class="block group no-underline transition duration-200 ease-in-out text-center">
									<img width={720} height={360} src={post.data.heroImage} alt="" class="w-full mb-4 rounded-xl group-hover:shadow-lg" />
									<h4 class="m-0 mb-2 text-gray-900 dark:text-white leading-tight group-hover:text-blue-600 md:first:text-4xl first:text-3xl font-semibold">{post.data.title}</h4>
									<p class="m-0 mb-2 text-lg text-gray-600 dark:text-gray-300 group-hover:text-blue-600">{post.data.description}</p>
									<p class="m-0 text-sm text-gray-600 dark:text-gray-300 group-hover:text-blue-600">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
